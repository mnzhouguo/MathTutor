  "modules": [
    {
      "module_id": "M01",
      "module_name": "第一模块：数与式的深度运算",
      "module_tag": "代数思维篇",
      "overview": "主要考察学生对符号的驾驭能力，核心是由“算数”向“代数”的转变，重点考察“绝对值性质”和“整体思想”。",
      "topics": [
        {
          "topic_id": "T01",
          "topic_name": "绝对值化简",
          "alias": "专题1",
          "knowledge_points": [
            {
              "kp_id": "KP01_1",
              "kp_name": "零点分段法",
              "detail": "处理多个绝对值相加（如 |x-1|+|x+2|），通过寻找绝对值为0的临界点分段讨论，去除绝对值符号。"
            }
          ]
        },
        {
          "topic_id": "T10",
          "topic_name": "进位制与新运算",
          "alias": "专题10",
          "knowledge_points": [
            {
              "kp_id": "KP10_1",
              "kp_name": "严格套用",
              "detail": "面对 a * b = 3a - 2b 等新定义运算，需严格代入规则，不随意改变运算顺序。"
            },
            {
              "kp_id": "KP10_2",
              "kp_name": "位值原理",
              "detail": "理解进制转换本质，如八进制 123(8) = 1*8^2 + 2*8^1 + 3*8^0。"
            }
          ]
        },
        {
          "topic_id": "T03",
          "topic_name": "代数式化简求值",
          "alias": "专题3",
          "knowledge_points": [
            {
              "kp_id": "KP03_1",
              "kp_name": "整体代入法",
              "detail": "不求单字母的值，而是将 x-2y=3 作为一个整体代入到复杂式子中。"
            },
            {
              "kp_id": "KP03_2",
              "kp_name": "降幂策略",
              "detail": "利用已知等式将高次项转化为低次项（如已知 x^2 = x+1，求 x^3）。"
            }
          ]
        },
        {
          "topic_id": "T04",
          "topic_name": "整式无关型问题",
          "alias": "专题4",
          "knowledge_points": [
            {
              "kp_id": "KP04_1",
              "kp_name": "“无关”的本质",
              "detail": "若代数式的值与 x 无关，则合并同类项后，含 x 的项系数必为 0。"
            },
            {
              "kp_id": "KP04_2",
              "kp_name": "求参数模型",
              "detail": "列出方程令 x 的系数为0，从而求出参数 m, n 的值。"
            }
          ]
        },
        {
          "topic_id": "T05",
          "topic_name": "整式的规律探索",
          "alias": "专题5",
          "knowledge_points": [
            {
              "kp_id": "KP05_1",
              "kp_name": "数式规律",
              "detail": "周期性变化（符号跳变、个位循环）、斐波那契数列变形。"
            },
            {
              "kp_id": "KP05_2",
              "kp_name": "图形规律",
              "detail": "火柴棒、点阵图，核心是找到 n 对应的通项公式（通常是 an+b 或 n^2 模型）。"
            }
          ]
        }
      ]
    },
    {
      "module_id": "M02",
      "module_name": "第二模块：方程与应用",
      "module_tag": "建模思维篇",
      "overview": "方程是解决实际问题的工具，压轴题往往在“解的特殊性”（整数解）和“场景的复杂性”（最优化方案）上做文章。",
      "topics": [
        {
          "topic_id": "T06",
          "topic_name": "一元一次方程特殊解",
          "alias": "专题6",
          "knowledge_points": [
            {
              "kp_id": "KP06_1",
              "kp_name": "整数解问题",
              "detail": "分离参数，将 x 表示为含 k 的式子（如 x = 12/k），利用整除特性反求 k。"
            },
            {
              "kp_id": "KP06_2",
              "kp_name": "同解方程",
              "detail": "两个方程解相同，或者解互为相反数/倒数，建立联系互相代入求解。"
            },
            {
              "kp_id": "KP06_3",
              "kp_name": "错解还原",
              "detail": "因看错系数或符号导致结果错误，通过错误结果倒推原方程正确系数。"
            }
          ]
        },
        {
          "topic_id": "T07",
          "topic_name": "一元一次方程应用",
          "alias": "专题7",
          "knowledge_points": [
            {
              "kp_id": "KP07_1",
              "kp_name": "方案选择",
              "detail": "比较两种方案（如话费、租车）哪个更划算，通常寻找“费用相等”的临界点。"
            },
            {
              "kp_id": "KP07_2",
              "kp_name": "分段计费",
              "detail": "水费、电费、出租车的阶梯计价，需根据不同区间列出分段方程。"
            },
            {
              "kp_id": "KP07_3",
              "kp_name": "销售利润",
              "detail": "熟练运用：售价 = 进价 * (1 + 利润率)，以及折后价计算公式。"
            }
          ]
        }
      ]
    },
    {
      "module_id": "M03",
      "module_name": "第三模块：数轴与动态几何",
      "module_tag": "数形结合篇",
      "overview": "这是七上最难、区分度最大的板块。“动点”和“动角”是初中动态几何的起点，必须掌握“分类讨论”思想。",
      "topics": [
        {
          "topic_id": "T02",
          "topic_name": "数轴动点问题",
          "alias": "专题2",
          "knowledge_points": [
            {
              "kp_id": "KP02_1",
              "kp_name": "路程与坐标互化",
              "detail": "P点坐标 xt = 起点 ± 速度 * t。"
            },
            {
              "kp_id": "KP02_2",
              "kp_name": "追及与相遇",
              "detail": "数轴上的行程问题，利用相对速度或距离差建立等量关系列方程。"
            },
            {
              "kp_id": "KP02_3",
              "kp_name": "中点公式",
              "detail": "若 M 是 AB 中点，则 xM = (xA + xB) / 2，处理复杂动点的核心神器。"
            },
            {
              "kp_id": "KP02_4",
              "kp_name": "分类讨论",
              "detail": "判断动点在定点的左侧还是右侧、相遇前还是相遇后，必须画图分类求解。"
            }
          ]
        },
        {
          "topic_id": "T08",
          "topic_name": "线段动点问题",
          "alias": "专题8",
          "knowledge_points": [
            {
              "kp_id": "KP08_1",
              "kp_name": "双中点模型",
              "detail": "M 是 AC 中点，N 是 BC 中点，不管 C 点怎么动，MN = 1/2 AB（长度为定值）。"
            },
            {
              "kp_id": "KP08_2",
              "kp_name": "折返运动",
              "detail": "动点在两点之间往返运动，需分段计算总路程，特别注意转折时间点。"
            },
            {
              "kp_id": "KP08_3",
              "kp_name": "方程思想",
              "detail": "设最小线段为 x，用含 x 的式子表示其他线段，根据几何关系列方程。"
            }
          ]
        },
        {
          "topic_id": "T09",
          "topic_name": "动角问题",
          "alias": "专题9",
          "knowledge_points": [
            {
              "kp_id": "KP09_1",
              "kp_name": "旋转角速度",
              "detail": "类似于行程问题，旋转角度 = 角速度 * t。"
            },
            {
              "kp_id": "KP09_2",
              "kp_name": "角平分线夹角模型",
              "detail": "如“双角平分线”模型，寻找动态变化中保持倍数关系或定值关系的角。"
            },
            {
              "kp_id": "KP09_3",
              "kp_name": "三角板叠合",
              "detail": "利用三角板固有的特征角（30°/45°/60°/90°）建立几何等量关系。"
            },
            {
              "kp_id": "KP09_4",
              "kp_name": "分类讨论",
              "detail": "射线在角内部还是外部？顺时针还是逆时针旋转？防止漏解。"
            }
          ]
        }
      ]
    }
  ]
}